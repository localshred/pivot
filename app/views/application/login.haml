.page-title Login

%form{:action => "/login", :method => "post", :name => "login_form"}
  .row
    .label Pivotal Username (Email)
    .input
      %input{:type => "text", :name => "username"}
  .row
    .label Pivotal Password
    .input
      %input{:type => "password", :name => "password"}
  .row
    .label &nbsp;
    .input
      %input{:type => "submit", :name => "submit", :value => "Login"}
